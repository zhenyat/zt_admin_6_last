%h1= t Product.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Product.human_attribute_name(:name)
      %th= Product.human_attribute_name(:title)
      %th= Product.human_attribute_name(:sku)
      %th= Product.human_attribute_name(:price)
      %th= Product.human_attribute_name(:description)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.title
        %td= product.sku
        %td= product.price
        %td= product.description
        %td= status_mark product.status
        %td= render 'admin/shared/index_buttons', resource: product
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_product_path, class: 'btn btn-primary btn-block'
