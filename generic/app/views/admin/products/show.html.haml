%h1= t Product.model_name.human
%table.table.table-striped
  %tbody
    - @product.attributes.each do |key, value|
      - if key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at'
        //skip these attributes
      -else
        %tr
          - if key == 'status'
            %td= t 'status.status'
            %td= status_mark @product.status
          -else
            %td= t "activerecord.attributes.product.#{key}"
            %td= value

.form_actions
  .row
    .col-md-2
      = link_to t('actions.back'), admin_products_path, class: 'btn btn-primary btn-block'
