%h1= t Sample.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Sample.human_attribute_name(:name)
      %th= Sample.human_attribute_name(:title)
      %th= Sample.human_attribute_name(:price)
      %th= Sample.human_attribute_name(:quantity)
      %th= t 'status.status'
      %th= t "images.cover_image"
      %th= t 'actions.actions'

  %tbody
    - @samples.each do |sample|
      %tr
        %td= sample.name
        %td= sample.title
        %td= sample.price
        %td= sample.quantity
        %td= status_mark sample.status
        - if sample.cover_image.attached?
          %td= image_tag sample.cover_image.variant(resize_to_fit: [50, 50])
        - else
          %td
        %td= render 'admin/shared/index_buttons', resource: sample
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_sample_path, class: 'btn btn-primary btn-sm'
