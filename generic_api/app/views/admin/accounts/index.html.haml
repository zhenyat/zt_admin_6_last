%h1= t Account.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Account.human_attribute_name(:id)
      -# %th= Account.human_attribute_name(:provider)
      -# %th= Account.human_attribute_name(:uid)
      -# %th= Account.human_attribute_name(:confirmation_token)
      -# %th= Account.human_attribute_name(:confirmed_at)
      -# %th= Account.human_attribute_name(:confirmation_sent_at)
      %th= Account.human_attribute_name(:email)
      %th= Account.human_attribute_name(:name)
      %th= Account.human_attribute_name(:nickname)
      -# %th= Account.human_attribute_name(:image)
      -# %th= Account.human_attribute_name(:tokens)
      %th= t 'actions.actions'

  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.id
        %td= account.email
        -# %td= account.provider
        -# %td= account.uid
        -# %td= account.confirmation_token
        -# %td= account.confirmed_at
        -# %td= account.confirmation_sent_at
        %td= account.name
        %td= account.nickname
        -# %td= account.image
        -# %td= account.tokens
        %td= link_to t('actions.show'), admin_account_path(account), class: 'btn btn-primary btn-sm'
        -# %td= render 'admin/shared/index_buttons', resource: account
%br
-# .row
  .col-md-2
    = link_to t('actions.create'), new_admin_account_path, class: 'btn btn-primary btn-sm'
